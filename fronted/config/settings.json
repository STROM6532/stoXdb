{
    "appName": "STOXDB",
    "version": "1.0.0",
    "theme": {
        "primaryColor": "#00ff88",
        "secondaryColor": "#007BFF",
        "backgroundColor": "#0d0d0d",
        "textColor": "#ffffff"
    },
    "dashboard": {
        "autoRefresh": true,
        "refreshIntervalSeconds": 30,
        "defaultChartType": "line",
        "showVolume": true
    },
    "charts": {
        "line": {
            "lineTension": 0.3,
            "borderWidth": 2
        },
        "bar": {
            "borderWidth": 1
        }
    },
    "api": {
        "baseUrl": "http://localhost:5000/api",
        "endpoints": {
            "stocks": "stocks",
            "companies": "companies",
            "downloadData": "download"
        }
    }
}
